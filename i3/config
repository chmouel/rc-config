# set modifier
set $super Mod4
set $alt Mod1

# set font
workspace_layout tabbed

# Use Mouse+$super to drag floating windows to their wanted position
floating_modifier $super

# Make the currently focused window a scratchpad
bindsym $super+Shift+0 move scratchpad

# Show the first scratchpad window
bindsym $super+0 scratchpad show

#autostart
# exec --no-startup-id /usr/bin/setxkbmap -option "ctrl:nocaps"
# exec --no-startup-id xsettingsd &
# # exec --no-startup-id picom -b
# exec --no-startup-id xbindkeys
# exec --no-startup-id xrandr -q |grep -q "HDMI-A-0 connected" && xrandr --output eDP --off
exec_always --no-startup-id ~/.config/polybar/launch.sh &
exec_always --no-startup-id alttab -i 128x128 -t 128x128 -frame '#282a36' -bw 1 -bc '#bd93f9' &

# start a terminal
bindsym $super+Shift+Return exec kitty
bindsym $super+r exec rofi -p "Run command: " -show run -theme purple.rasi
bindsym $super+Shift+h exec nautilus ~/Downloads
bindsym $super+Shift+space exec gpaste-client ui

bindsym $super+space exec mounch

bindsym $super+control+space floating toggle

# switch to workspace
bindsym $super+1 workspace Browse
bindsym $super+2 workspace Dev;
bindsym $super+3 workspace Chat
bindsym $super+4 workspace Music
bindsym $super+5 workspace Others

# move focused container to workspace
bindsym $super+Shift+1 move container to workspace Browse;workspace Browse
bindsym $super+Shift+2 move container to workspace Dev;workspace Dev
bindsym $super+Shift+3 move container to workspace Chat;workspace Chat
bindsym $super+Shift+4 move container to workspace Music;workspace music
bindsym $super+Shift+5 move container to workspace Others;workspace Others
bindsym $super+backslash workspace back_and_forth

bindsym $super+Shift+r restart
bindsym $super+Left focus left
bindsym $super+Down focus down
bindsym $super+Up focus up
bindsym $super+Right focus right

bindsym $super+shift+Left move left
bindsym $super+shift+Right move right
bindsym $super+shift+Up move up
bindsym $super+shift+Down move down

bindsym $super+F1 layout splith
bindsym $super+F2 layout tabbed
bindsym $super+F3 layout splitv

bindsym $alt+F4 kill 
bindsym $super+Shift+F4 exec "i3-msg exit"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt
        bindsym Return mode "default"
}
bindsym $super+F7 mode "resize"

# window rules, you can find the window class using xprop
font pango:DejaVu Sans Mono 0
for_window [class=".*"] border pixel 0
#assign [class=kitty] 2
assign [class=Emacs] Dev
assign [class=Firefox] Browse
assign [class=Chromium] Browse
assign [class=Slack] Chat
assign [class=Spotify] Music
