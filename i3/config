# set modifier
set $super Mod4
set $alt Mod1

# Setings
font pango:RobotoMono Nerd Font 4 # tiny tiny title
workspace_auto_back_and_forth no
floating_modifier $super
focus_on_window_activation focus
focus_follows_mouse no

# Smart Gaps
smart_gaps on
hide_edge_borders smart_no_gaps
gaps inner 2
gaps outer 2
workspace_layout tabbed

# startups
exec_always --no-startup-id ~/.fehbg
exec_always --no-startup-id ~/.config/polybar/launch.sh &
# bureau mean i have my large hdmi screen attached
exec_always --no-startup-id [[ -n $(command -v autorandr) && $(autorandr --detected) == bureau ]] && i3-msg "gaps inner all set 20" 
exec --no-startup-id alttab -i 128x128 -t 128x128 -frame '#282a36' -bw 1 -bc '#bd93f9' &

include keybindings.conf

# window rules, you can find the window class using xprop
assign [class=Emacs] Dev
assign [class=Firefox] Browse
assign [class=Chromium] Browse
assign [class=Slack] Chat

for_window [all] title_window_icon padding 3px
for_window [class=".*"] border pixel 0
for_window [class=(Nm-connection-editor|Org.gnome.Weather)] floating enable
for_window [class=(Nm-connection-editor|Org.gnome.Weather)] focus
for_window [class="^Spotify"] move --no-auto-back-and-forth to workspace Music
for_window [class="^floater$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 3

