[alias]
	st = status
	amend = commit --amend
    dlast = diff HEAD^1
    dlog = log -n1
    review = git-review
    sp = stash show -p
    show-merged = git-show-merged
    vdiff = difftool -y --tool=vimdiff2
    vlast = difftool -y --tool=vimdiff2 HEAD^1
    ediff = difftool -y --tool=ediff
    pullall = !git pull && git submodule update --init --recursive
    ghub = !sh -c 'git clone http://github.com/$1' -
    logc = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset%C(bold white) <%ae>%Creset' --abbrev-commit --no-merges
    bnm = branch --no-merged


[core]
    excludesfile = "~/.gitexclude"
    whitespace = trailing-space,space-before-tab
	pager = less -FRSX

[diff]
	mnemonicprefix = true
[merge]
	tool = emerge
[mergetool "emerge"]
	path = /home/chmouel/bin/qemacs

[difftool "ediff"]
    cmd = emacsclient --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
[push]
	default = matching
