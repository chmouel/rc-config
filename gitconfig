[alias]
    jenkins-error = git-jenkins-error
    co = checkout
    log = log --no-merges
	st = status
	amend = commit --amend
    dlast = diff --patch-with-stat --stat HEAD^1
    dlog = show --summary
    review = git-review
    sp = stash show -p
    show-merged = git-show-merged
    vdiff = difftool -y --tool=vimdiff2
    vlast = difftool -y --tool=vimdiff2 HEAD^1
    elast = difftool -y --tool=ediff HEAD^1
    ediff = difftool -y --tool=ediff
    pullall = !git pull && git submodule update --init --recursive
    bnm = branch --no-merged
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --no-merges
    gh-browse = git-browse
    #gh-clone = !sh -c 'git clone http://github.com/$1' -
    gh-clone = !bash -c '[[ $1 == */* ]] || git clone http://github.com/openstack/$1 && git clone http://github.com/$1' -
    browse-review = git-browse-review

[core]
    quotepath = false
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = "~/.gitexclude"
	pager = less -FRSX

[diff]
	mnemonicprefix = true

[merge]
	tool = emerge

 [difftool "ediff"]
     cmd = /usr/local/bin/emacsclient --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"

[push]
	default = matching

[color]
  ui = true

[grep]
  lineNumber = true
