[alias]
	st = status
	amend = commit --amend
    dlast = diff HEAD^1
    dlog = log -n1
    review = git-review
    sp = stash show -p
    show-merged = git-show-merged
    lg = log --graph --pretty=format:'%C(red%h%Creset -%C(yellow dim)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --no-merges
    vdiff = difftool --tool=vimdiff2
    vlast = difftool --tool=vimdiff2 HEAD^1
    ediff = difftool --tool=ediff
    meld = difftool --tool=meld
    mlast = difftool --tool=meld HEAD^1


[core]
    excludesfile = "~/.gitexclude"
    whitespace = trailing-space,space-before-tab
