[alias]
    jenkins-error = git-jenkins-error
    co = checkout
    log = log --no-merges
	st = status -sb
	amend = commit --amend -v
    dlast = diff --patch-with-stat --stat HEAD^1
    dlog = show --summary
    review = git-review
    sp = stash show -p
    show-merged = git-show-merged
    vdiff = difftool -y --tool=vimdiff2
    vlast = difftool -y --tool=vimdiff2 HEAD^1
    elast = difftool -y --tool=ediff HEAD^1
    ediff = difftool -y --tool=ediff
    pullall = !git pull && git submodule update --init --recursive
    bnm = branch --no-merged
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --no-merges
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    gbrowse = git-browse
    gh-clone = !bash -c '[[ $1 == */* ]] || git clone http://github.com/openstack/$1 && git clone http://github.com/$1' -
	g = grep --break --heading --line-number
    cp = cherry-pick
    branch-date = "!git for-each-ref --sort=committerdate --format='%1B[32m%(committerdate:iso8601) %1B[34m%(committerdate:relative) %1B[0;m%(refname:short)' refs/heads/"
    bd = branch --delete
	commit = commit -v
    branch-cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"
	ppr =  "!git push -u chmouel $(git rev-parse --abbrev-ref HEAD) && hub pull-request"

[core]
