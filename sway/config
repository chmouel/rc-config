#bindsym --whole-window button6 workspace prev
#bindsym --whole-window button7 workspace next

# XF86Launch* are mouse gestures from mx master via logid
bindsym $mod+Return exec swjapp kitty
bindsym XF86Launch8 exec swjapp kitty
bindsym $mod+Shift+Return exec kitty

bindsym $mod+Backspace exec swjapp -c emacs -- emacsclient -c -n 
bindsym XF86Launch9 exec swjapp -c emacs -- emacsclient -c -n 
bindsym $mod+shift+Backspace exec emacsclient -c -n 

bindsym $mod+s exec swjapp -c Slack slack
bindsym XF86Launch5 exec swjapp -c Slack slack

bindsym $mod+f exec swjapp firefox
bindsym XF86Launch6 exec swjapp firefox

bindsym XF86Launch7 exec swjapp -c Google-chrome google-chrome-stable

bindsym XF86AudioRaiseVolume exec pamixer -ui 2
bindsym XF86AudioLowerVolume exec pamixer -ud 2
bindsym XF86AudioMute exec pamixer --toggle-mute
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop

bindsym $mod+Shift+e exec  wofi-emoji

for_window [class="^floater$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 10
# set $launcher exec $term --class=launcher -e sway-launcher-desktop
set $launcher wofi -GmIf
bindsym alt+f2 exec $launcher

bindsym Print exec grim -g "$(slurp)" -t png -|wl-copy -t image/png
bindsym Shift+Print exec grim -g "$(slurp)" -t png /tmp/$(date +"Screenshot_%Y-%m-%d-%H:%M.%S.png")
bindsym Control+Print exec grim -g "$(swaymsg -t get_tree | jq -j '.. | select(.type?) | select(.focused).rect | "\(.x),\(.y) \(.width)x\(.height)"')"

# Kill focused window
bindsym $mod+F4 kill

# Start your launcher
bindsym $mod+Space exec $menu|xargs swaymsg exec --

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+r reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+f4 exit

# Move your focus around
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Switch to workspace
bindsym $mod+1 workspace $wsbrowse
bindsym $mod+2 workspace $wsterm
bindsym $mod+3 workspace $wscode
bindsym $mod+4 workspace $wschat
bindsym $mod+5 workspace $wsmusic
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $wsbrowse; workspace $wsbrowse
bindsym $mod+Shift+2 move container to workspace $wsterm; workspace $wsterm
bindsym $mod+Shift+3 move container to workspace $wscode; workspace $wscode
bindsym $mod+Shift+4 move container to workspace $wschat; workspace $wschat
bindsym $mod+Shift+5 move container to workspace $wsmusic; workspace $wsmusic
bindsym $mod+Shift+6 move container to workspace number 6; workspace 6
bindsym $mod+Shift+7 move container to workspace number 7; workspace 7
bindsym $mod+Shift+8 move container to workspace number 8; workspace 8
bindsym $mod+Shift+9 move container to workspace number 9; workspace 9
bindsym $mod+Shift+0 move container to workspace number 10; workspace $wsbrowse0

bindsym $mod+f5 splith
bindsym $mod+f6 splitv
bindsym $mod+f1 layout stacking
bindsym $mod+f2 layout tabbed
bindsym $mod+f3 layout toggle split
bindsym $mod+f11 fullscreen
bindsym $mod+Shift+space floating toggle
bindsym $mod+control+space focus mode_toggle

bindsym $mod+c floating enable;resize set width 2110px
bindsym $mod+shift+c floating disable

client.focused          #6272A4 #6272A4 #F8F8F2 #6272A4   #6272A4
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   #44475A
client.unfocused        #282A36 #282A36 #BFBFBF #282A36   #282A36
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36

client.background       #F8F8F2 

mode "resize" {
    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"



#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
     swaybar_command waybar
}

